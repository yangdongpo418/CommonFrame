<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.l.common"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />


    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="22"/>

    <application
        android:name=".application.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".business.text.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity android:name=".business.text.activity.PullActivity">

        </activity>

        <activity android:name=".business.text.activity.SplashActivity"></activity>

        <service android:name=".service.DownloadService"></service>
        <service android:name=".service.LogUploadService"></service>
    </application>

</manifest>